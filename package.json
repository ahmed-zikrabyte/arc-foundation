{
  "name": "man-next-app",
  "description": "Scaffold a modern Next.js 15 boilerplate with Tailwind, TypeScript, ShadCN, Biome, Ultracite, Husky, and multi-theme support.",
  "keywords": [
    "create-next-app",
    "nextjs-template",
    "nextjs",
    "tailwindcss",
    "typescript",
    "shadcn",
    "eslint",
    "biome",
    "ultracite",
    "husky",
    "boilerplate",
    "theme-provider",
    "dark-mode",
    "pnpm create"
  ],
  "version": "0.1.0",
  "private": false,
  "author": "Muhsin Abdul Nissar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Muhsin-42/man-next-app.git"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "biome check --write . && next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format . --write",
    "format:check": "biome format . --check",
    "fix-all": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit --incremental",
    "upgrade": "npx npm-check-updates -u && npm install",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.508.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@next/eslint-plugin-next": "^15.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lefthook": "^1.12.2",
    "lint-staged": "^15.5.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "ultracite": "5.0.35"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  }
}
